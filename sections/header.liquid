<!-- Navbar Container -->
<div class="relative bg-white" x-data="{ open: false }">
  <div class="mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center py-6 md:justify-start md:space-x-10">

      <!-- Store Name / Logo -->
      <div class="flex justify-start lg:flex-1 truncate">
        <h1 class="text-xl font-bold truncate">{{ shop.name }}</h1>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button @click="open = ! open" class="text-gray-500 hover:text-gray-900 focus:outline-none">
          <!-- Hamburger Icon -->
          <svg class="h-6 w-6" x-show="!open" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <!-- Close Icon -->
          <svg class="h-6 w-6" x-show="open" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Navigation Menu for Desktop -->
      <nav class="hidden  md:flex space-x-10">
        {% for link in linklists.main-menu.links %}
          {% if link.links != blank %}
            <div class="relative" x-data="{ openSubmenu: false }">
              <button type="button" class="inline-flex items-center text-base text-gray-500 hover:text-gray-900" @click="openSubmenu = ! openSubmenu">
                {{ link.title }}
                {% render 'icon-dropdown' %}
              </button>
              <div class="absolute z-10 -ml-5 mt-5 transform px-2 w-screen max-w-md sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/2"
                   x-show="openSubmenu"
                   @click.away="openSubmenu = false"
                   x-transition>
                <div class="shadow-lg border ring-black ring-opacity-5 overflow-hidden rounded-lg">
                  <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                    {% for sublink in link.links %}
                      <a href="{{ sublink.url }}" class="-m-3 p-3 flex items-start rounded-lg hover:bg-gray-100">
                        <div class="ml-4">
                          <p class="text-gray-900 text-base font-medium">{{ sublink.title }}</p>
                        </div>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          {% else %}
            <a href="{{ link.url }}" class="text-base  text-gray-500 hover:text-gray-900">{{ link.title }}</a>
          {% endif %}
        {% endfor %}
      </nav>

      <!-- Right Side Links: Cart, Login, Register for Desktop -->
      <div class="hidden md:flex items-center justify-end md:flex-1 space-x-5">
        {% render 'icon' %}
        <a href="/cart" class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900">Cart</a>
        <a href="" class="text-base text-gray-500 hover:text-gray-900">Login</a>
        <a href="" class="text-base text-gray-500 hover:text-gray-900">Register</a>
      </div>

    </div>
  </div>

  <!-- Mobile Navigation Menu -->
  <!-- Mobile Navigation Menu -->
<div class="fixed inset-0 z-20   p-4 md:hidden" x-show="open" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 transform -translate-y-full" x-transition:enter-end="opacity-100 transform translate-y-0" x-transition:leave="transition ease-in duration-200" x-transition:leave-start="opacity-100 transform translate-y-0" x-transition:leave-end="opacity-0 transform -translate-y-full">
  <div class="pt-2 pb-3 space-y-1 flex flex-col items-center"> <!-- Add flex and items-center for centering -->
    {% for link in linklists.main-menu.links %}
      {% if link.links != blank %}
        <div x-data="{ openSubmenu: false }">
          <button @click="openSubmenu = !openSubmenu" class="w-full text-left px-3 py-2 text-gray-700 font-medium hover:bg-gray-100">
            {{ link.title }}
          </button>
          <div x-show="openSubmenu" class="pl-6 space-y-1">
            {% for sublink in link.links %}
              <a href="{{ sublink.url }}" @click="open = false" class="block px-3 py-2 text-gray-500 hover:bg-gray-100">{{ sublink.title }}</a>
            {% endfor %}
          </div>
        </div>
      {% else %}
        <a href="{{ link.url }}" @click="open = false" class="block px-3 py-2 text-gray-700 font-medium hover:bg-gray-100">{{ link.title }}</a>
      {% endif %}
    {% endfor %}
  </div>
  <div class="py-3 border-t border-gray-200">
    <a href="/cart" @click="open = false" class="block px-3 py-2 text-gray-700 hover:bg-gray-100">Cart</a>
    <a href="" @click="open = false" class="block px-3 py-2 text-gray-700 hover:bg-gray-100">Login</a>
    <a href="" @click="open = false" class="block px-3 py-2 text-gray-700 hover:bg-gray-100">Register</a>
  </div>
</div>


