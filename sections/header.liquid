<!-- Navbar -->
<div class="bg-gradient-to-r from-blue-500 to-indigo-600 shadow-lg">
  <div class="max-w-screen-xl mx-auto px-6 py-4 flex justify-between items-center">
    
    <!-- Shop Name / Logo -->
    <h2 class="text-3xl font-bold text-white">
      {{ shop.name }}
    </h2>

    <!-- Hamburger Menu Button (Visible on Small Screens) -->
    <button id="menu-toggle" class="md:hidden text-white focus:outline-none">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <!-- Main Navigation Menu (Visible on Large Screens) -->
    <div id="menu" class="hidden md:flex space-x-6 items-center">
      <!-- Loop Through Main Menu Links -->
      {% for item in linklists.main-menu.links %}
        <div class="relative group" id="menu-item-{{ forloop.index }}">
          <!-- Check if the item has a URL -->
          {% if item.url %}
            <a href="{{ item.url }}" class="text-lg font-medium text-white hover:text-yellow-300 transition duration-200 ease-in-out hover:underline">
              {{ item.title }}
            </a>
          {% else %}
            <span class="text-lg font-medium text-gray-400">
              {{ item.title }}
            </span>
          {% endif %}

          <!-- Dropdown for Sub-links (If Available) -->
          {% if item.links %}
            <div class="absolute left-0 hidden group-hover:block bg-white text-black p-4 rounded-lg shadow-xl mt-2 w-48 z-10 transition-all ease-in-out duration-300 opacity-0 group-focus:block opacity-100" id="submenu-{{ forloop.index }}">
              <ul class="space-y-2">
                {% for sublink in item.links %}
                  <li>
                    <a href="{{ sublink.url }}" class="block text-sm text-gray-700 hover:text-blue-600 transition duration-200 ease-in-out">{{ sublink.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <!-- Right Side: Cart, Signup, and Login Links -->
    <div class="flex items-center space-x-6">
      <!-- Cart Icon -->
      <a href="/cart" class="relative text-white hover:text-yellow-300 transition duration-200 ease-in-out">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h18l-3 12H6L3 3z"></path>
        </svg>
        <!-- Cart Item Count (Optional) -->
        <span class="absolute top-0 right-0 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">3</span>
      </a>

      <!-- Signup and Login Links -->
      <a href="/account/register" class="text-lg font-medium text-white hover:text-yellow-300 transition duration-200 ease-in-out">
        Signup
      </a>
      <a href="/account/login" class="text-lg font-medium text-white hover:text-yellow-300 transition duration-200 ease-in-out">
        Login
      </a>
    </div>
  </div>
</div>

<!-- JavaScript for Hamburger Menu and Dropdown Toggling -->
<script>
  // Toggle the menu visibility on small screens
  document.getElementById('menu-toggle').addEventListener('click', function () {
    const menu = document.getElementById('menu');
    menu.classList.toggle('hidden');
  });

  // Add click event for dropdown menu
  document.querySelectorAll('.group').forEach(group => {
    const submenu = group.querySelector('.absolute');
    const openIcon = group.querySelector('.group > svg:first-child'); // First SVG (open icon)
    const closeIcon = group.querySelector('.group > svg:last-child'); // Second SVG (close icon)
    
    if (submenu && openIcon && closeIcon) {
      group.addEventListener('click', function (event) {
        // Toggle visibility of the submenu when clicked
        submenu.classList.toggle('hidden');
        
        // Toggle between open and close SVG icons
        openIcon.classList.toggle('hidden');
        closeIcon.classList.toggle('hidden');

        event.stopPropagation(); // Prevent closing when clicking on the dropdown itself
      });
    }
  });

  // Close all dropdowns if clicking outside the menu
  document.addEventListener('click', function(event) {
    if (!event.target.closest('.group')) {
      document.querySelectorAll('.group .absolute').forEach(submenu => {
        submenu.classList.add('hidden');
      });
      document.querySelectorAll('.group > svg:last-child').forEach(icon => {
        icon.classList.add('hidden');
      });
      document.querySelectorAll('.group > svg:first-child').forEach(icon => {
        icon.classList.remove('hidden');
      });
    }
  });
</script>
